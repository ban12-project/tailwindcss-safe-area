{
  "name": "@ban12/tailwindcss-safe-area",
  "version": "0.2.4",
  "type": "module",
  "license": "MIT",
  "repository": "https://github.com/ban12-project/tailwindcss-safe-area",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "swcify:cjs": "swc src -d dist --strip-leading-paths",
    "swcify:esm": "swc src -d dist --strip-leading-paths -C module.type=es6 --out-file-extension mjs",
    "swcify": "npm run swcify:cjs && npm run swcify:esm",
    "build": "npm run swcify",
    "dev": "npm run swcify -- --watch",
    "postbuild": "tsc --emitDeclarationOnly",
    "prepublishOnly": "npm run build",
    "release-channel": "node ./scripts/release-channel.js",
    "release-notes": "node ./scripts/release-notes.js"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest/custom-matchers.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "moduleNameMapper": {
      "^~/(.*)": "<rootDir>/$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "tailwindcss": ">=3.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.11",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "expect": "^29.7.0",
    "jest": "^29.7.0",
    "jest-diff": "^29.7.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "3.4.3",
    "typescript": "^4.9.5"
  }
}
